<div
  class="tab-pane fade show active"
  id="park-tab-pane"
  role="tabpanel"
  aria-labelledby="park-tab"
  tabindex="0"
>
  <form class="p-4" onsubmit="park_car(event)">
    <div class="mb-3">
      <label for="registrationNumber" class="form-label">Vehicle Registration
        Number</label>
      <input
        name="registration-number"
        type="text"
        class="form-control"
        id="registrationNumber"
        aria-describedby="registrationHelp"
        pattern="^[A-Za-z]{2}[a-zA-Z0-9]{8}$"
        oninvalid="this.setCustomValidity('Enter a valid Registration Number')"
        oninput="setCustomValidity('')"
      />
      <div id="registrationHelp" class="form-text">Enter your 10 character
        Registration Number</div>
    </div>
    <button type="submit" class="btn btn-primary">Park Car</button>
  </form>
  <div id="parkAlertPlaceholder" class="p-4"></div>
</div>